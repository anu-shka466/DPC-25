#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter number of elements: ";
    cin >> n;

    int arr[n];
    cout << "Enter elements (only 0, 1, or 2):\n";
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
        while (arr[i] != 0 && arr[i] != 1 && arr[i] != 2) {
            cout << "Invalid! Enter 0, 1, or 2 only: ";
            cin >> arr[i];
        }
    }

    int low = 0, mid = 0, high = n - 1;
    while (mid <= high) {
        if (arr[mid] == 0) {
            swap(arr[low], arr[mid]);
            low++;
            mid++;
        }
        else if (arr[mid] == 1) {
            mid++;
        }
        else { // arr[mid] == 2
            swap(arr[mid], arr[high]);
            high--;
        }
    }

    cout << "Sorted array: ";
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;

    return 0;
}